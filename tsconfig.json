{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"lib": ["ES6", "DOM"],
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"typeRoots": ["./src/@types"]
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "dist"]
}
